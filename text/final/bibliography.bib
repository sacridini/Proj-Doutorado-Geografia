journal = {ISPRS Journal of Photogrammetry and Remote Sensing},
keywords = {Change detection,Polyalgorithm,Remote sensing,Scalable computing,Time series analysis},
number = {July},
pages = {217--234},
publisher = {Elsevier},
title = {{Towards a polyalgorithm for land use change detection}},
url = {https://doi.org/10.1016/j.isprsjprs.2018.07.002},
