@Article{rs12111815,
AUTHOR = {Tao, Bo and Yang, Yanjun and Yang, Jia and Smith, Ray and Fox, James and Ruane, Alex C. and Liu, Jinze and Ren, Wei},
TITLE = {Recent Shrinkage and Fragmentation of Bluegrass Landscape in Kentucky},
JOURNAL = {Remote Sensing},
